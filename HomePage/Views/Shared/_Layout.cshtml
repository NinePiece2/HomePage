<style>
    a.navbar-brand {
        white-space: normal;
        text-align: center;
        word-break: break-all;
    }

    a {
        color: #4CAF50 !important;
        text-decoration: none;
        font-family: 'Poppins', Verdana, sans-serif;
    }

    .btn-primary {
        color: #fff;
        background-color: #1b6ec2;
        border-color: #1861ac;
    }

    .nav-pills .nav-link.active, .nav-pills .show > .nav-link {
        color: #fff;
        background-color: #1b6ec2;
        border-color: #1861ac;
    }

    .border-top {
        border-top: 1px solid #e5e5e5;
    }

    .border-bottom {
        border-bottom: 1px solid #e5e5e5;
    }

    .box-shadow {
        box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
    }

    button.accept-policy {
        font-size: 1rem;
        line-height: inherit;
    }

    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        white-space: nowrap;
        line-height: 60px;
    }

    #navbar.sticky {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
    }

    /* Light Mode Styles */
    .navbar-toggler {
        background-color: #ffffff; 
        border: 4px solid #cccccc !important;
        color: #333333; 
        padding: 8px 16px; 
        border-radius: 4px;
        padding-top: 10px !important; 
        padding-bottom: 10px !important; 
    }

    @@media (max-width: 990px) {
        .navbar-collapse{
            margin-top: 20px;
        }
    }

</style>

