        $(document).ready(function () {


            // Smooth scrolling when clicking on navbar links
            $('a[href^="#"]').on('click', function (event) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top
                    }, 100);
                }
            });

            // Highlight the active section based on scroll position
            $(window).on('scroll', function () {
                var scrollPos = $(window).scrollTop();

                // Initialize a variable to track if any section is currently active
                var sectionActive = false;

                $('section').each(function () {
                    var top = $(this).offset().top - 400; // 400px offset for highlighting
                    var bottom = top + $(this).outerHeight();

                    // Check if the scroll position is within the bounds of the current section
                    if (scrollPos >= top && scrollPos <= bottom) {
                        // If the scroll position is within the bounds of this section,
                        // mark it as active and highlight its corresponding navigation item
                        sectionActive = true;
                        $('ul.navbar-nav li').removeClass('active-nav-item');
                        $('ul.navbar-nav li a[href="#' + $(this).attr('id') + '"]').parent().addClass('active-nav-item');
                    }
                });

                // If no section is active, remove all active classes from navigation items
                if (!sectionActive) {
                    $('ul.navbar-nav li').removeClass('active-nav-item');
                }
            });

            $('input[type="radio"][name="topic"]').change(function () {
                // If "Other" is selected
                validateTopic();
                if ($('#other').is(':checked')) {
                    $('#otherTopic').prop('disabled', false);
                } else {
                    $('#otherTopic').prop('disabled', true);
                }
            });

            // Validate the name field
            $('#name').change(validateName);

            // Validate the email field
            $('#email').change(validateEmail);

            // Validate the message field
            $('#message').change(validateMessage);

            $('#otherTopic').change(validateTopic);

            $('#name').on('input', validateName);
            $('#email').on('input', validateEmail);
            $('#message').on('input', validateMessage);
            $('#otherTopic').on('input', validateTopic);


            function validateName() {
                var name = $('#name').val();
                if (name === '') {
                    $('#nameError').show();
                    return false;
                }

                $('#nameError').hide();

                if (name.length > 0 && name.length <=100) {
                    $('#nameLengthError').hide();
                    return true;
                } else{
                    $('#nameLengthError').show();
                    return false;
                }

            }

            function validateEmail() {
                var email = $('#email').val();
                var valid = true;
                if (email === '') {
                    $('#emailError').show();
                    $('#emailValueError').hide();
                    return false;
                }

                if (!isEmail(email)) {
                    $('#emailValueError').show();
                    $('#emailError').hide();
                    return false;
                } else {
                    $('#emailValueError').hide();
                }

                $('#emailError').hide();

                if (email.length > 0 && email.length <= 100) {
                    $('#emailLengthError').hide();
                    return true;
                } else {
                    $('#emailLengthError').show();
                    return false;
                }
            }

            function validateTopic() {
                var topic = $('input[name="topic"]:checked').val();
                var otherTopic = $('#otherTopic').val();

                if (typeof topic === 'undefined') {
                    $('#topicError').show();
                    return false;
                }

                $('#topicError').hide();

                if (topic === 'Other' && otherTopic === '') {
                    $('#otherTopicError').show();
                    return false;
                } else if (topic !== 'Other') {
                    $('#otherTopicError').hide();
                    return true;
                }

                $('#otherTopicError').hide();

                if (otherTopic.length > 0 && otherTopic.length <= 250) {
                    $('#otherTopicLengthError').hide();
                    return true;
                } else {
                    $('#otherTopicLengthError').show();
                    return false;
                }
            }

            function validateMessage() {
                var message = $('#message').val();
                if (message === '') {
                    $('#messageError').show();
                    return false;
                }

                $('#messageError').hide();

                if (message.length > 0 && message.length <= 500) {
                    $('#messageLengthError').hide();
                    return true;
                } else {
                    $('#messageLengthError').show();
                    return false;
                }
            }

            $('#sendButton').click(function (e) {
                e.preventDefault(); // Prevent form submission

                var isValid = true;

                var isNameValid = validateName(); 
                var isEmailValid = validateEmail(); 
                var isTopicValid = validateTopic(); 
                var isMessageValid = validateMessage(); 

                var honeyPot = $('input[name="honeyPot"]:checked').val();

                console.log(honeyPot);

                if (!(typeof honeyPot === 'undefined')) {
                    alert("Your request could not be Authenticated")
                    return;
                }

                // Combine the results using logical AND
                isValid = isNameValid && isEmailValid && isTopicValid && isMessageValid;


                if (!isValid) {
                    return; // Stop processing if the form is invalid
                }

                $("#PopUpModelSection").load('@Url.Action("RenderPopUpModel", "Home")', function () {
                    $('#PopUpModelBtn').click(function () {
                        SendEmail();
                        $('#PopUpModel').modal('hide');
                    });
                    $('#PopUpModel').modal('show'); // Show the modal
                });
            });

            function SendEmail() {
                // Get form data
                var email = $('#email').val();
                var name = $('#name').val();
                var topic = $('input[name="topic"]:checked').val();

                if (topic == 'Other') {
                    topic = $('#otherTopic').val();
                }

                var message = $('#message').val();    

                // Clear form fields
                $('#email').val('');
                $('#name').val('');
                $('input[name="topic"]').prop('checked', false);
                if (topic == 'Other') {
                    $('#otherTopic').val('');
                }
                $('#message').val('');

                // AJAX request
                $.ajax({
                    url: 'Home/SendEmail', // Replace with your backend endpoint
                    type: 'POST',
                    data: {
                        name: name,
                        email: email,
                        message: message,
                        topic: topic
                    },
                    success: function (response) {
                        if (response.success) {
                            // Handle success response
                            console.log('Email sent successfully! ' + response.message);

                        } else {
                            // Handle error response
                            alert('Error sending email: ' + response.message + ' Please contact me at romit@romitsagu.com')
                        }
                    },
                    error: function (xhr, status, error) {
                        // Handle error response
                        alert('Error sending email: ' + error + ' Please contact me at romit@romitsagu.com');
                        console.error('Error sending email:', error);

                        $('#email').val(email);
                        $('#name').val(name);
                        $('#message').val(message);
                    }
                });
            }

            // Fade in header content on page load
            $('.header-content').addClass('fade-in');

            $(window).scroll(function () {
                checkSectionsInView();
            });

            function checkSectionsInView() {
                $('.section').each(function () {
                    if ($(this).offset().top < $(window).scrollTop() + $(window).height()) {
                        $(this).addClass('fadeIn-other');
                    }
                });
            }


        });
    </script>
