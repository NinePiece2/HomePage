    <style>
        /* Custom styles for the navbar */
        #mainNav {
            position: fixed;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            z-index: 1000;
            background-color: rgba(34, 34, 34, 0.8) !important; /* Slightly transparent black */
            padding-top: 20px;
            /*border-right: 2px solid rgba(255, 255, 255, 0.1); /* Subtle edge to the right */
            width: 140px; /* Ensuring consistent width */
            transition: width 0.3s ease-in-out, height 0.3s ease-in-out; /* Add transition for width and height */
        }

            #mainNav .navbar-nav {
                display: flex;
                flex-direction: column;
                align-items: center; /* Center align the nav items */
                width: 100%; /* Use full width of the sidebar */
                transition: width 0.3s ease-in-out, height 0.3s ease-in-out; /* Add transition for width and height */
            }

                #mainNav .navbar-nav > li {
                    width: 100%; /* Full width to the links for easier click */
                }

                    #mainNav .navbar-nav > li > a {
                        display: block; /* Make the links take up full space of li */
                        padding: 12px 15px; /* Slightly larger padding for a better touch area */
                        color: #fff;
                        font-size: 16px;
                        text-align: center;
                        text-decoration: none; /* Remove underline from links */
                        transition: background-color 0.3s; /* Smooth transition for hover */
                    }

                        #mainNav .navbar-nav > li > a:hover,
                        #mainNav .navbar-nav > li.active-nav-item > a {
                            background-color: #555;
                            color: #ddd; /* Slightly lighter text on hover for better readability */
                        }

                    #mainNav .navbar-nav > li:not(:last-child) {
                        border-bottom: 1px solid rgba(255, 255, 255, 0.1); /* Add a subtle separator */
                    }


        canvas {
            display: block;
            vertical-align: bottom;
        }
        /* ---- particles.js container ---- */

        #particles-js {
            position: absolute;
            width: 100%;
            height: 100%;
            background-color: #000000;
            background-image: url("");
            background-repeat: no-repeat;
            background-size: cover;
            background-position: 50% 50%;
        }

        :where(.focus\:bg-gray-100:focus) {
            background-color: #121212 !important;
        }

        .hamburger-menu {
            display: none; /* Hide by default and will be displayed via media query on smaller screens */
            position: relative; /* Relative position to keep it in view */
            width: 100%; /* Full width to span the entire nav */
            background: none;
            border: none;
            color: white; /* Adjust color based on your theme */
            font-size: 24px;
            cursor: pointer;
            z-index: 1100; /* Make sure it's above other content */
        }

        @@media (max-width: 768px) {
            .hamburger-menu {
                display: block; /* Show only on small screens */
            }
        }



